{% include "base.html.twig" %}

{% block title %} Acceuil {% endblock %}

{% block body %}

    {# Welcome message #}
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="jumbotron">
                    <h1 class="display-4">Hello, world!</h1>
                    <p class="lead">This is a simple hero unit, a simple jumbotron-style component for calling extra
                        attention to featured content or information.</p>
                    <hr class="my-4">
                    <p>It uses utility classes for typography and spacing to space content out within the larger
                        container.</p>
                    <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
                </div>
            </div>
        </div>


        {# Categories #}
        <div class="row">
            Liste des catégories, cliquez pour accéder à tout les articles en relation avec celle-ci.
        </div>
        <div class="row">
            {% for category in categories %}
                <div class="card" style="width: 18rem;">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                            <a href="../category?id={{ category.id }}">{{ category.name }}</a></li>
                    </ul>
                </div>
            {% endfor %}
        </div>
        <br>

        {# Articles #}
        <div class="row">
            <div class="col">
                <div class="row">
                    Liste des articles, cliquez pour accéder celui-ci.
                </div>
                <div class="row">
                    {% for article in articles %}
                        <div class="card" style="width: 18rem;">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <a href="../article?id={{ article.id }}">{{ article.title }}</a></li>
                            </ul>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>

    </div>




{% endblock %}