{% set pageName = 'Articles par catégorie' %}

{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
    {# Article #}

    {% for article in category.articles %}
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="post-preview">
                    <a href="../article?id={{ article.id }}">
                        <h2 class="post-title">
                            {{ article.title }}
                        </h2>
                        <h3 class="post-subtitle">
                            {{ article.introduction }}
                        </h3>
                    </a>
                    <a class="post-meta">Catégorie : <a
                                href="../category?id={{ article.category.id }}"> {{ article.category.name }} </a>
                        <a href="../category?id={{ category.id }}"></a>
                        <p class="post-meta">Posté par {{ article.user.name }}
                            <a href="#"></a>
                            le {{ article.createdAt|date('d-m-Y à H:i') }} </p>
                </div>
                <hr>
            </div>
        </div>

    {% endfor %}

{% endblock %}