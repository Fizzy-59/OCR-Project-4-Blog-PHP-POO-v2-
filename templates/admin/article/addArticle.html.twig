{% extends "base.html.twig" %}

{% set pageName = 'Créer un article' %}

{% block body %}
    <div class="container">
            {# Errors #}
            {% for error in errors %}
                <div class="alert alert-danger" role="alert">
                    {{ error }}
                </div>
            {% endfor %}

        <div class="row" id="row_style">


            <h4 class="text-center">Nouvel article : </h4>
            <div class="col-md-4   col-md-offset-4">
                <form method="post" action="/admin/new_article">
                    <div class="form-group">
                        <input name="title" type="text" class="form-control" placeholder="Titre" value="{{ title }}">
                    </div>
                    <textarea name="introduction" id="editor" cols="50" rows="10" placeholder="Introduction">{{ introduction }}</textarea>
                    <br>
                    <textarea name="content" id="editor" cols="50" rows="20" placeholder="Contenu">{{ content }}</textarea>
                    <br>

                    <div class="form-group">
                        <p>
                            <label for="categories">Catgérorie liée</label><br/>
                            <select name="category" id="category">
                                {% for category in allCategories %}
                                    <option value={{ category.name }}>{{ category.name }}</option>
                                {% endfor %}
                            </select>
                        </p>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block"> Enrengistrement</button>
                        </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}